    "version": "0.2.0",
    "configurations": [
        {
            "name": "DebugServer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": ["-tags", "server"],
            "program": "${workspaceFolder}",
            "args": ["-conf", "${workspaceFolder}/conf/server.conf",
                        "-log.level", "DEBUG"],
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "DebugClient",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": ["-tags", "client"],
            "program": "${workspaceFolder}",
            "args": ["-conf", "${workspaceFolder}/conf/client.conf",
                        "-log.level", "DEBUG"],
            "dlvFlags": ["--check-go-version=false"]
        },
        {
            "name": "DebugKernelClient",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "buildFlags": [],
            "program": "${workspaceFolder}/kernel/main",
            "args": ["-log.level", "DEBUG"],
            "dlvFlags": ["--check-go-version=false"]
        }
    ]
}